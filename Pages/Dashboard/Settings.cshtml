@page
@model Stationnement.Web.Pages.Dashboard.SettingsModel
@{
    ViewData["Title"] = "Settings";
    Layout = "_DashboardLayout";
}

<div class="flex items-center justify-between mb-6">
    <div>
        <h2 class="text-xl font-semibold text-gray-900">Account Settings</h2>
        <p class="text-gray-500">Manage your profile and preferences</p>
    </div>
</div>

<div class="grid lg:grid-cols-3 gap-6">
    <!-- Sidebar -->
    <div class="lg:col-span-1">
        <div class="bg-white rounded-xl shadow-sm p-6">
            <div class="text-center mb-6">
                <div class="w-20 h-20 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-3" id="avatarDisplay">
                    <span class="text-2xl font-bold text-primary-600" id="userInitials">U</span>
                </div>
                <h3 class="font-semibold text-gray-900" id="userName">User Name</h3>
                <p class="text-sm text-gray-500" id="userEmail">user@email.com</p>
            </div>
            <nav class="space-y-1">
                <button onclick="showSection('profile')" class="w-full text-left px-4 py-2 rounded-lg bg-primary-50 text-primary-700 font-medium">Profile</button>
                <button onclick="showSection('security')" class="w-full text-left px-4 py-2 rounded-lg text-gray-600 hover:bg-gray-50">Security</button>
                <button onclick="showSection('notifications')" class="w-full text-left px-4 py-2 rounded-lg text-gray-600 hover:bg-gray-50">Notifications</button>
                <button onclick="showSection('vehicles')" class="w-full text-left px-4 py-2 rounded-lg text-gray-600 hover:bg-gray-50">Vehicles</button>
                <!-- Logout button for all devices -->
                <hr class="my-2" />
                <button onclick="logout()" class="w-full text-left px-4 py-2 rounded-lg text-red-600 hover:bg-red-50 flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                    </svg>
                    Logout
                </button>
            </nav>
        </div>
    </div>

    <!-- Main Content -->
    <div class="lg:col-span-2">
        <!-- Profile Section -->
        <div id="profileSection" class="bg-white rounded-xl shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">Profile Information</h3>
            <form id="profileForm" class="space-y-4">
                <div class="grid md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">First Name</label>
                        <input type="text" id="firstName" class="w-full px-4 py-3 border border-gray-200 rounded-xl" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Last Name</label>
                        <input type="text" id="lastName" class="w-full px-4 py-3 border border-gray-200 rounded-xl" />
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                    <input type="email" id="email" class="w-full px-4 py-3 border border-gray-200 rounded-xl bg-gray-50" readonly />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Phone Number</label>
                    <input type="tel" id="phone" class="w-full px-4 py-3 border border-gray-200 rounded-xl" placeholder="+33 1 23 45 67 89" />
                </div>
                <button type="submit" id="profileSubmitBtn" class="px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700">Save Changes</button>
            </form>
        </div>

        <!-- Security Section (hidden by default) -->
        <div id="securitySection" class="bg-white rounded-xl shadow-sm p-6 hidden">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">Security Settings</h3>
            <form id="securityForm" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Current Password</label>
                    <input type="password" id="currentPassword" class="w-full px-4 py-3 border border-gray-200 rounded-xl" required />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">New Password</label>
                    <input type="password" id="newPassword" class="w-full px-4 py-3 border border-gray-200 rounded-xl" required minlength="6" />
                    <p class="text-xs text-gray-500 mt-1">Password must be at least 6 characters long</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Confirm New Password</label>
                    <input type="password" id="confirmPassword" class="w-full px-4 py-3 border border-gray-200 rounded-xl" required minlength="6" />
                </div>
                <button type="submit" id="passwordSubmitBtn" class="px-6 py-3 bg-primary-600 text-white rounded-xl font-medium hover:bg-primary-700">Update Password</button>
            </form>
        </div>

        <!-- Notifications Section (hidden by default) -->
        <div id="notificationsSection" class="bg-white rounded-xl shadow-sm p-6 hidden">
            <h3 class="text-lg font-semibold text-gray-900 mb-6">Notification Preferences</h3>
            <div class="space-y-4">
                <label class="flex items-center justify-between p-4 border border-gray-200 rounded-xl">
                    <div>
                        <p class="font-medium text-gray-900">Email Notifications</p>
                        <p class="text-sm text-gray-500">Receive booking confirmations via email</p>
                    </div>
                    <input type="checkbox" checked class="w-5 h-5 text-primary-600 rounded" />
                </label>
                <label class="flex items-center justify-between p-4 border border-gray-200 rounded-xl">
                    <div>
                        <p class="font-medium text-gray-900">Reminders</p>
                        <p class="text-sm text-gray-500">Get reminded before your booking starts</p>
                    </div>
                    <input type="checkbox" checked class="w-5 h-5 text-primary-600 rounded" />
                </label>
                <label class="flex items-center justify-between p-4 border border-gray-200 rounded-xl">
                    <div>
                        <p class="font-medium text-gray-900">Promotions</p>
                        <p class="text-sm text-gray-500">Receive special offers and discounts</p>
                    </div>
                    <input type="checkbox" class="w-5 h-5 text-primary-600 rounded" />
                </label>
            </div>
        </div>

        <!-- Vehicles Section (hidden by default) -->
        <div id="vehiclesSection" class="bg-white rounded-xl shadow-sm p-6 hidden">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-semibold text-gray-900">My Vehicles</h3>
                <button class="px-4 py-2 bg-gray-300 text-gray-500 rounded-lg text-sm cursor-not-allowed" disabled>+ Add Vehicle</button>
            </div>
            
            <!-- Under Development Notice -->
            <div class="bg-amber-50 border border-amber-200 rounded-xl p-6 text-center">
                <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
                    </svg>
                </div>
                <h4 class="text-lg font-semibold text-amber-800 mb-2">ðŸš§ Under Development</h4>
                <p class="text-amber-700 mb-4">The vehicle management feature is currently being developed and will be available soon!</p>
                <p class="text-sm text-amber-600">You can still enter your vehicle plate number when making a booking.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', async function() {
    await loadUserProfile();
    
    // Profile form submission
    document.getElementById('profileForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        await updateProfile();
    });
    
    // Security form submission
    document.getElementById('securityForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        await updatePassword();
    });
});

async function loadUserProfile() {
    try {
        const response = await Auth.apiRequest('/api/auth/me');
        const data = await response.json();
        
        if (data.success && data.data) {
            const user = data.data;
            document.getElementById('userName').textContent = `${user.firstName || ''} ${user.lastName || ''}`.trim() || 'User';
            document.getElementById('userEmail').textContent = user.email || '';
            document.getElementById('userInitials').textContent = ((user.firstName?.[0] || '') + (user.lastName?.[0] || '')).toUpperCase() || 'U';
            
            document.getElementById('firstName').value = user.firstName || '';
            document.getElementById('lastName').value = user.lastName || '';
            document.getElementById('email').value = user.email || '';
            document.getElementById('phone').value = user.phoneNumber || '';
        }
    } catch (error) {
        console.error('Error loading user profile:', error);
    }
}

async function updateProfile() {
    const btn = document.getElementById('profileSubmitBtn');
    const originalText = btn.textContent;
    btn.disabled = true;
    btn.textContent = 'Saving...';
    
    try {
        const response = await Auth.apiRequest('/api/auth/profile', {
            method: 'PUT',
            body: JSON.stringify({
                firstName: document.getElementById('firstName').value,
                lastName: document.getElementById('lastName').value,
                phoneNumber: document.getElementById('phone').value || null
            })
        });
        
        const data = await response.json();
        
        if (data.success) {
            showToast('Profile updated successfully!', 'success');
            await loadUserProfile();
            // Update user in localStorage
            const user = Auth.getUser();
            if (user) {
                user.firstName = document.getElementById('firstName').value;
                user.lastName = document.getElementById('lastName').value;
                user.phoneNumber = document.getElementById('phone').value;
                localStorage.setItem('user', JSON.stringify(user));
            }
        } else {
            showToast(data.message || 'Failed to update profile', 'error');
        }
    } catch (error) {
        showToast('Error updating profile. Please try again.', 'error');
        console.error(error);
    } finally {
        btn.disabled = false;
        btn.textContent = originalText;
    }
}

async function updatePassword() {
    const btn = document.getElementById('passwordSubmitBtn');
    const originalText = btn.textContent;
    btn.disabled = true;
    btn.textContent = 'Updating...';
    
    const currentPassword = document.getElementById('currentPassword').value;
    const newPassword = document.getElementById('newPassword').value;
    const confirmPassword = document.getElementById('confirmPassword').value;
    
    if (newPassword !== confirmPassword) {
        showToast('New passwords do not match', 'error');
        btn.disabled = false;
        btn.textContent = originalText;
        return;
    }
    
    if (newPassword.length < 6) {
        showToast('New password must be at least 6 characters long', 'error');
        btn.disabled = false;
        btn.textContent = originalText;
        return;
    }
    
    try {
        const response = await Auth.apiRequest('/api/auth/password', {
            method: 'PUT',
            body: JSON.stringify({
                currentPassword: currentPassword,
                newPassword: newPassword
            })
        });
        
        const data = await response.json();
        
        if (data.success) {
            showToast('Password updated successfully!', 'success');
            // Clear password fields
            document.getElementById('currentPassword').value = '';
            document.getElementById('newPassword').value = '';
            document.getElementById('confirmPassword').value = '';
        } else {
            showToast(data.message || 'Failed to update password', 'error');
        }
    } catch (error) {
        showToast('Error updating password. Please try again.', 'error');
        console.error(error);
    } finally {
        btn.disabled = false;
        btn.textContent = originalText;
    }
}

function showSection(section) {
    // Update sidebar buttons
    document.querySelectorAll('#profileSection, #securitySection, #notificationsSection, #vehiclesSection').forEach(sec => {
        sec.classList.add('hidden');
    });
    
    document.querySelectorAll('button[onclick^="showSection"]').forEach(btn => {
        btn.classList.remove('bg-primary-50', 'text-primary-700', 'font-medium');
        btn.classList.add('text-gray-600');
    });
    
    document.getElementById(section + 'Section').classList.remove('hidden');
    const activeBtn = document.querySelector(`button[onclick="showSection('${section}')"]`);
    if (activeBtn) {
        activeBtn.classList.add('bg-primary-50', 'text-primary-700', 'font-medium');
        activeBtn.classList.remove('text-gray-600');
    }
}
</script>
}
