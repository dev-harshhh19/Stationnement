    document.getElementById('priceTotal').textContent = `Rs. ${(pricing.totalAmount || 0).toFixed(2)}`;
    
    // Show subscription discount if applicable
    if (pricing.subscriptionDiscount && pricing.subscriptionDiscount > 0) {
        document.getElementById('subscriptionDiscountRow').classList.remove('hidden');
        document.getElementById('priceSubscriptionDiscount').textContent = `-Rs. ${pricing.subscriptionDiscount.toFixed(2)}`;
    } else {
        document.getElementById('subscriptionDiscountRow').classList.add('hidden');
    }
}

let currentTxnId = '';
let pendingBookingData = null;

async function confirmBooking() {
    const btn = document.getElementById('confirmBookingBtn');
    const btnText = document.getElementById('confirmBtnText');
    const spinner = document.getElementById('confirmBtnSpinner');
    const errorEl = document.getElementById('errorMessage');
    
    btn.disabled = true;
    btnText.textContent = 'Generating Payment...';
    spinner.classList.remove('hidden');
    errorEl.classList.add('hidden');
    
    // Generate unique transaction ID
    currentTxnId = 'STN' + Date.now();
    
    // Store booking data for later - ensure proper ISO date format
    const startTimeInput = document.getElementById('startTime').value;
    const endTimeInput = document.getElementById('endTime').value;
    
    // Convert datetime-local to ISO string with timezone
    const startDate = new Date(startTimeInput);
    const endDate = new Date(endTimeInput);
    
    pendingBookingData = {
        slotId: selectedSlot.id,
        startTime: startDate.toISOString(),
        endTime: endDate.toISOString(),
        vehiclePlate: document.getElementById('vehiclePlate').value || 'N/A',
        vehicleType: document.getElementById('vehicleType').value || 'hatchback',
        // Pass calculated pricing to backend so exact displayed price is stored
        totalAmount: pricing.totalAmount,
        baseAmount: pricing.baseAmount,
        discountAmount: (pricing.subscriptionDiscount || 0) + (pricing.baseAmount * pricing.durationDiscount || 0),
        surchargeAmount: pricing.baseAmount * (pricing.weekendSurcharge || 0) + pricing.baseAmount * ((pricing.demandMultiplier || 1) - 1)
    };
    
    console.log('Booking data:', pendingBookingData);
    
    try {
        // Call server-side API to generate UPI QR code
        const response = await fetch('/api/payment/generate-upi-qr', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                amount: pricing.totalAmount,
                transactionId: currentTxnId,
                note: `Parking - ${selectedSlot.code} at ${selectedLocation.name}`
            })
        });
        
        const data = await response.json();
        
        if (data.success) {
            // Show payment modal with generated QR code
            document.getElementById('paymentAmount').textContent = `Rs. ${data.data.amountInr}`;
            document.getElementById('paymentTxnId').textContent = currentTxnId;
            document.getElementById('upiIdDisplay').textContent = data.data.upiId;
            
            // Display the server-generated QR code
            const qrContainer = document.getElementById('upiQrCode');
            qrContainer.innerHTML = `<img src="${data.data.qrCodeBase64}" alt="UPI QR Code" class="w-48 h-48" />`;
            
            document.getElementById('paymentModal').classList.remove('hidden');
        } else {
            errorEl.textContent = data.message || 'Failed to generate payment QR';
            errorEl.classList.remove('hidden');
        }
    } catch (error) {
        console.error('Error generating QR:', error);
        errorEl.textContent = 'Failed to generate payment QR code';
        errorEl.classList.remove('hidden');
    }
    
    btn.disabled = false;
    btnText.textContent = 'Confirm Booking';
    spinner.classList.add('hidden');
}

function closePaymentModal() {
    document.getElementById('paymentModal').classList.add('hidden');
    const errorEl = document.getElementById('paymentError');
    if (errorEl) {
        errorEl.classList.add('hidden');
        errorEl.textContent = '';
    }
    pendingBookingData = null;
}

async function verifyPayment() {
    const btn = document.getElementById('verifyPaymentBtn');
    const btnText = document.getElementById('verifyBtnText');
    const errorEl = document.getElementById('paymentError');
    if (errorEl) errorEl.classList.add('hidden');
    
    btnText.textContent = 'Verifying...';
    btn.disabled = true;
    
    // In production, verify payment with backend
    // For demo, we'll proceed with booking after short delay
    await new Promise(r => setTimeout(r, 1500));
    
    try {
        const response = await Auth.apiRequest('/api/reservation/create', {
            method: 'POST',
            body: JSON.stringify(pendingBookingData)
        });
        
        if (!response.ok) {
            let errorMessage = `HTTP ${response.status}: ${response.statusText}`;
            try {
                const errorData = await response.json();
                errorMessage = errorData.message || errorMessage;
            } catch (e) {
                // If response is not JSON, use default message
            }
            throw new Error(errorMessage);
        }
        
        const data = await response.json();
        
        if (data.success) {
            document.getElementById('paymentModal').classList.add('hidden');
            document.getElementById('bookingQrCode').textContent = data.data.qrCode;
            document.getElementById('successModal').classList.remove('hidden');
            // Reset booking data
            pendingBookingData = null;
        } else {
            throw new Error(data.message || 'Booking failed. Please try again.');
        }
    } catch (error) {
        console.error('Booking error:', error);
        const errorMessage = error.message || 'Payment verification failed. Please try again.';
        
        // Try to show error in UI if element exists
        if (errorEl) {
            errorEl.textContent = errorMessage;
            errorEl.classList.remove('hidden');
        } else {
            showToast(errorMessage, 'error');
        }
    } finally {
        btnText.textContent = "I've Paid";
        btn.disabled = false;
    }
}
