<!-- Step 2: Choose Slot (hidden initially) -->
<div id="slotStep" class="hidden">
    <div class="bg-white rounded-xl shadow-sm p-6">
        <div class="flex items-center justify-between mb-6">
            <div>
                <h2 class="text-xl font-semibold text-gray-900" id="selectedLocationName">Select a Slot</h2>
                <p class="text-gray-500" id="selectedLocationAddress"></p>
            </div>
            <button onclick="goToStep(1)" class="text-primary-600 hover:text-primary-700 font-medium">‚Üê Change Location</button>
        </div>
        <div class="grid md:grid-cols-2 gap-4 mb-6 p-4 bg-gray-50 rounded-xl">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Start Date & Time</label>
