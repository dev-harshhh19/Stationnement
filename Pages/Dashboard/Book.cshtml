            const floors = {};
            regularSlots.forEach(s => {
                const floor = s.floor || s.slotCode.split('-')[0];
                if (!floors[floor]) floors[floor] = [];
                floors[floor].push(s);
            });
            
            // Render regular slots by floor
            Object.keys(floors).sort().forEach(floor => {
                html += `<div class="col-span-full mt-4 mb-2"><h4 class="font-semibold text-gray-700 text-sm uppercase">${floor}</h4></div>`;
