                    // Check if slot is booked by another user
                    const isBooked = s.isBooked === true || s.isAvailable === false;
                    
                    if (isBooked) {
                        // Show as locked/booked - not clickable
                        html += `<div class="slot-item occupied" title="This slot is booked by another user for the selected time">
