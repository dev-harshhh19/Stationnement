@section Scripts {
<script>
let locations = [];
let selectedLocation = null;
let selectedSlot = null;
let pricing = { baseAmount: 0, discountAmount: 0, surchargeAmount: 0, totalAmount: 0 };

let subscriptionInfo = null;

document.addEventListener('DOMContentLoaded', async function() {
    // Set default dates
    const now = new Date();
    now.setMinutes(Math.ceil(now.getMinutes() / 15) * 15);
    document.getElementById('startTime').value = formatDateTimeLocal(now);
    now.setHours(now.getHours() + 2);
    document.getElementById('endTime').value = formatDateTimeLocal(now);
    
    // Load subscription info for vehicle restrictions
    await loadSubscriptionInfo();
    applyVehicleRestrictions();
    
    await loadLocations();
    
    document.getElementById('startTime').addEventListener('change', () => { checkAvailability(); recalculatePrice(); });
    document.getElementById('endTime').addEventListener('change', () => { checkAvailability(); recalculatePrice(); });
    document.getElementById('searchLocation').addEventListener('input', filterLocations);
    
    // Refresh slot availability every 30 seconds to show real-time updates
    setInterval(() => {
        if (selectedLocation && document.getElementById('slotStep') && !document.getElementById('slotStep').classList.contains('hidden')) {
            checkAvailability();
        }
    }, 30000);
    document.getElementById('vehicleType').addEventListener('change', function() {
        const selectedType = this.value;
        if ((selectedType === 'sports' || selectedType === 'hyper_sports') && !subscriptionInfo) {
            showToast('Sports and Hyper-Sports vehicles require a subscription. Please upgrade to Pro or Premium plan.', 'warning');
            this.value = 'hatchback';
            recalculatePrice();
        }
    });
});

async function loadSubscriptionInfo() {
    try {
        const response = await Auth.apiRequest('/api/subscription/current');
        const data = await response.json();
        if (data.success && data.data && data.data.tier !== 'free') {
            subscriptionInfo = data.data;
        }
    } catch (e) {
        console.log('No subscription found');
    }
}

function applyVehicleRestrictions() {
    const vehicleSelect = document.getElementById('vehicleType');
    const sportsOption = vehicleSelect.querySelector('option[value="sports"]');
    const hyperSportsOption = vehicleSelect.querySelector('option[value="hyper_sports"]');
    
    if (!subscriptionInfo) {
        // No subscription - disable Sports and Hyper-Sports
        if (sportsOption) {
            sportsOption.disabled = true;
            sportsOption.title = 'Pro or Premium subscription required';
        }
        if (hyperSportsOption) {
            hyperSportsOption.disabled = true;
            hyperSportsOption.title = 'Premium subscription required';
        }
        document.getElementById('vehicleNote').textContent = 'Sports and Hyper-Sports vehicles require a subscription. Upgrade to Pro or Premium to access.';
        document.getElementById('vehicleNote').className = 'text-xs text-amber-600 mt-1';
    } else {
        // Check specific permissions
        const tier = subscriptionInfo.tier;
        if (tier === 'pro') {
            // Pro can use Sports but not Hyper-Sports
            if (sportsOption) sportsOption.disabled = false;
            if (hyperSportsOption) {
                hyperSportsOption.disabled = true;
                hyperSportsOption.title = 'Premium subscription required for Hyper-Sports';
            }
        } else if (tier === 'premium') {
            // Premium can use both
            if (sportsOption) sportsOption.disabled = false;
            if (hyperSportsOption) hyperSportsOption.disabled = false;
        }
    }
}

function formatDateTimeLocal(date) {
    // Use local time components instead of UTC
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, '0');
    const day = String(date.getDate()).padStart(2, '0');
    const hours = String(date.getHours()).padStart(2, '0');
    const minutes = String(date.getMinutes()).padStart(2, '0');
    return `${year}-${month}-${day}T${hours}:${minutes}`;
}

async function loadLocations() {
    try {
        const response = await fetch('/api/parking/locations');
        const data = await response.json();
        if (data.success) {
            locations = data.data;
            
            // Try to get user's location for distance-based sorting
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        const userLat = position.coords.latitude;
                        const userLng = position.coords.longitude;
                        
                        // Calculate distance for each location
                        locations = locations.map(loc => ({
                            ...loc,
                            distance: calculateDistance(userLat, userLng, loc.latitude, loc.longitude)
                        }));
                        
                        // Sort by distance (nearest first)
                        locations.sort((a, b) => a.distance - b.distance);
                        
                        renderLocations(locations, true);
                    },
                    (error) => {
                        console.log('Geolocation denied, showing all locations');
                        renderLocations(locations, false);
                    },
                    { timeout: 5000, enableHighAccuracy: false }
                );
            } else {
                renderLocations(locations, false);
            }
        }
    } catch (error) {
        console.error('Error loading locations:', error);
    }
}

// Haversine formula to calculate distance between two coordinates in km
function calculateDistance(lat1, lon1, lat2, lon2) {
    if (!lat2 || !lon2) return 9999;
    const R = 6371; // Earth's radius in km
    const dLat = (lat2 - lat1) * Math.PI / 180;
    const dLon = (lon2 - lon1) * Math.PI / 180;
    const a = Math.sin(dLat/2) * Math.sin(dLat/2) +
              Math.cos(lat1 * Math.PI / 180) * Math.cos(lat2 * Math.PI / 180) *
              Math.sin(dLon/2) * Math.sin(dLon/2);
    const c = 2 * Math.atan2(Math.sqrt(a), Math.sqrt(1-a));
    return R * c;
}

function filterLocations() {
    const search = document.getElementById('searchLocation').value.toLowerCase();
    const filtered = locations.filter(l => l.name.toLowerCase().includes(search) || l.city.toLowerCase().includes(search));
    renderLocations(filtered, filtered.length > 0 && filtered[0].distance !== undefined);
}

function renderLocations(locs, showDistance = false) {
    const grid = document.getElementById('locationsGrid');
    if (locs.length === 0) {
        grid.innerHTML = '<div class="col-span-full text-center py-8"><p class="text-gray-500">No locations found</p></div>';
        return;
    }
    grid.innerHTML = locs.map((l, index) => {
        const distanceText = showDistance && l.distance !== undefined 
            ? `<span class="px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-700">${l.distance < 1 ? Math.round(l.distance * 1000) + ' m' : l.distance.toFixed(1) + ' km'}</span>`
            : '';
        const nearestBadge = showDistance && index === 0 
            ? '<span class="absolute -top-2 -right-2 px-2 py-1 bg-green-500 text-white text-xs font-bold rounded-full">üìç Nearest</span>'
            : '';
        
        // Calculate availability percentage for progress bar
        const availPercent = l.totalSlots > 0 ? Math.round((l.availableSlots / l.totalSlots) * 100) : 0;
        const barColor = availPercent > 50 ? 'bg-green-500' : availPercent > 20 ? 'bg-yellow-500' : 'bg-red-500';
        
        return `
        <div class="relative border-2 ${showDistance && index === 0 ? 'border-green-400 bg-green-50' : 'border-gray-100'} rounded-xl p-5 hover:border-primary-300 transition cursor-pointer" onclick="selectLocation('${l.id}')">
            ${nearestBadge}
            <div class="flex items-start justify-between mb-3">
                <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    </svg>
                </div>
                <div class="flex flex-col items-end gap-1">
                    ${distanceText}
                    <span class="px-2 py-1 rounded-full text-xs font-medium ${l.availableSlots > 0 ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700'}">${l.availableSlots}/${l.totalSlots} slots</span>
                </div>
            </div>
            <h3 class="font-semibold text-gray-900 mb-1">${l.name}</h3>
            <p class="text-sm text-gray-500 mb-3">${l.address}, ${l.city}</p>
            
            <!-- Availability Progress Bar -->
            <div class="mb-3">
                <div class="flex justify-between text-xs text-gray-500 mb-1">
                    <span>${availPercent}% available</span>
                    <span>${l.availableSlots} of ${l.totalSlots}</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="${barColor} h-2 rounded-full transition-all" style="width: ${availPercent}%"></div>
                </div>
            </div>
            
            <div class="flex items-center justify-between">
                <span class="text-primary-600 font-semibold">From Rs. ${l.basePricePerHour}/hr</span>
                ${l.availableSlots === 0 ? '<span class="text-red-500 text-sm font-medium">Full</span>' : ''}
            </div>
        </div>`;
    }).join('');
}

function selectLocation(id) {
    selectedLocation = locations.find(l => l.id === id);
    document.getElementById('selectedLocationName').textContent = selectedLocation.name;
    document.getElementById('selectedLocationAddress').textContent = `${selectedLocation.address}, ${selectedLocation.city}`;
    goToStep(2);
    checkAvailability();
}

async function checkAvailability() {
    if (!selectedLocation) return;
    const startTime = document.getElementById('startTime').value;
    const endTime = document.getElementById('endTime').value;
    if (!startTime || !endTime) return;
    
    try {
        const response = await fetch(`/api/parking/available-slots?locationId=${selectedLocation.id}&startTime=${startTime}&endTime=${endTime}`);
        const data = await response.json();
        const grid = document.getElementById('slotsGrid');
        
        if (data.success && data.data && data.data.length > 0) {
            // Check if user can access premium slots
            let canAccessPremium = false;
            try {
                const subRes = await fetch('/api/subscription/can-access-premium');
                const subData = await subRes.json();
                canAccessPremium = subData.success && subData.data.canAccess;
            } catch { canAccessPremium = false; }
            
            // Sort slots - premium first, then by code
            const slots = data.data.sort((a, b) => {
                if (a.isPremium !== b.isPremium) return b.isPremium ? 1 : -1;
                return a.slotCode.localeCompare(b.slotCode);
            });
            
            // Separate premium and regular slots
            const premiumSlots = slots.filter(s => s.isPremium);
            const regularSlots = slots.filter(s => !s.isPremium);
            
            let html = '';
            
            // Premium Slots Section
            if (premiumSlots.length > 0) {
                html += `<div class="col-span-full mt-4 mb-2 flex items-center gap-2">
                    <h4 class="font-semibold text-amber-600 text-sm uppercase flex items-center gap-2">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
                        Premium Slots
                    </h4>
                    ${!canAccessPremium ? '<span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded">Pro subscription required</span>' : ''}
                </div>`;
                premiumSlots.forEach(s => {
                    // Check if slot is booked by another user
