async function selectSlot(slotId, slotCode, isPremium = false) {
    // Deselect all previously selected slots
    document.querySelectorAll('.slot-item.selected, .slot-item.premium-selected').forEach(el => {
        el.classList.remove('selected', 'premium-selected');
        // Restore the original class based on whether it was premium
        if (el.classList.contains('premium-available') || el.hasAttribute('data-premium')) {
            el.classList.add('premium-available');
        } else {
            el.classList.add('available');
        }
    });
    
    // Select the new slot
    const slotEl = document.querySelector(`[data-slot-id="${slotId}"]`);
    if (slotEl) {
        // Remove current classes
        slotEl.classList.remove('available', 'premium-available');
        
        // Add the appropriate selected class
        if (isPremium || slotEl.hasAttribute('data-premium')) {
            slotEl.classList.add('premium-selected');
        } else {
            slotEl.classList.add('selected');
        }
        
        selectedSlot = { id: slotId, code: slotCode };
        document.getElementById('continueToPayBtn').disabled = false;
        
        recalculatePrice();
    }
}

function recalculatePrice() {
    if (!selectedLocation || !selectedSlot) return;
    
    const startTime = document.getElementById('startTime').value;
    const endTime = document.getElementById('endTime').value;
    const vehicleType = document.getElementById('vehicleType')?.value || 'hatchback';
    
    const start = new Date(startTime);
    const end = new Date(endTime);
    const hours = Math.max(0.5, (end - start) / (1000 * 60 * 60));
    
    // Call server-side pricing API
    fetch('/api/payment/calculate-price', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
            baseHourlyRate: selectedLocation.basePricePerHour || 3.00,
            durationHours: hours,
            startTime: startTime,
            endTime: endTime,
            vehicleType: vehicleType,
            availabilityPercentage: (selectedLocation.availableSlots / selectedLocation.totalSlots) * 100
        })
    })
    .then(r => r.json())
    .then(async data => {
        if (data.success) {
            pricing = {
                baseAmount: data.data.baseAmount,
                discountAmount: data.data.baseAmount * data.data.totalDiscount,
                surchargeAmount: data.data.baseAmount * data.data.totalSurcharge,
                totalAmount: data.data.finalAmount,
                timeMultiplier: data.data.timeMultiplier,
                timeMultiplierName: data.data.timeMultiplierName,
                vehicleMultiplier: data.data.vehicleMultiplier,
                durationDiscount: data.data.durationDiscount,
                demandMultiplier: data.data.demandMultiplier,
                weekendSurcharge: data.data.weekendSurcharge,
                subscriptionDiscount: 0
            };
            
            // Fetch subscription info and apply discount on FINAL price
            try {
                const subResponse = await Auth.apiRequest('/api/subscription/current');
                const subData = await subResponse.json();
                if (subData.success && subData.data && subData.data.tier !== 'free') {
                    const discountPercent = subData.data.discountPercent || 0;
                    if (discountPercent > 0) {
                        // Apply discount on final amount (after all other calculations)
                        pricing.subscriptionDiscount = pricing.totalAmount * (discountPercent / 100);
                        pricing.totalAmount = Math.max(0, pricing.totalAmount - pricing.subscriptionDiscount);
                    }
                }
            } catch (e) {
                console.log('No subscription or not logged in');
            }
            
            // Update display if on payment step
            if (!document.getElementById('paymentStep').classList.contains('hidden')) {
                updateSummary();
            }
        }
    })
    .catch(err => console.error('Pricing error:', err));
}

function goToStep(step) {
    // Hide all steps
    ['locationStep', 'slotStep', 'paymentStep'].forEach(id => document.getElementById(id).classList.add('hidden'));
    
    // Update step indicators
    const steps = [
        { indicator: 'step1Indicator', circle: 'step1Circle', label: 'step1Label', line: 'step1Line' },
        { indicator: 'step2Indicator', circle: 'step2Circle', label: 'step2Label', line: 'step2Line' },
        { indicator: 'step3Indicator', circle: 'step3Circle', label: 'step3Label', line: 'step3Line' }
    ];
    
    steps.forEach((s, index) => {
        const stepNum = index + 1;
        const indicator = document.getElementById(s.indicator);
        const circle = indicator.querySelector('div');
        const label = indicator.querySelector('span');
        const line = document.getElementById(s.line);
        
        if (stepNum < step) {
            // Completed steps - green checkmark
            circle.className = 'w-10 h-10 bg-green-500 text-white rounded-full flex items-center justify-center font-bold';
            circle.innerHTML = '‚úì';
            label.className = 'ml-2 font-medium text-gray-900';
            if (line) line.className = 'w-16 h-1 bg-green-500 rounded';
        } else if (stepNum === step) {
            // Current step - primary color
            circle.className = 'w-10 h-10 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold';
            circle.textContent = stepNum;
            label.className = 'ml-2 font-medium text-gray-900';
            if (line) line.className = 'w-16 h-1 bg-gray-200 rounded';
        } else {
            // Future steps - gray
            circle.className = 'w-10 h-10 bg-gray-200 text-gray-500 rounded-full flex items-center justify-center font-bold';
            circle.textContent = stepNum;
            label.className = 'ml-2 text-gray-500';
            if (line) line.className = 'w-16 h-1 bg-gray-200 rounded';
        }
    });
    
    // Show the appropriate step
    if (step === 1) document.getElementById('locationStep').classList.remove('hidden');
    else if (step === 2) document.getElementById('slotStep').classList.remove('hidden');
    else if (step === 3) { document.getElementById('paymentStep').classList.remove('hidden'); updateSummary(); }
}

function updateSummary() {
    const start = new Date(document.getElementById('startTime').value);
    const end = new Date(document.getElementById('endTime').value);
    const duration = (end - start) / (1000 * 60 * 60);
    
    document.getElementById('summaryLocation').textContent = selectedLocation.name;
    document.getElementById('summarySlot').textContent = selectedSlot.code;
    document.getElementById('summaryDate').textContent = start.toLocaleDateString();
    document.getElementById('summaryTime').textContent = `${start.toLocaleTimeString([], {hour:'2-digit',minute:'2-digit'})} - ${end.toLocaleTimeString([], {hour:'2-digit',minute:'2-digit'})}`;
    document.getElementById('summaryDuration').textContent = `${duration.toFixed(1)} hours`;
    
    // Update pricing breakdown
    document.getElementById('priceBase').textContent = `Rs. ${(pricing.baseAmount || 0).toFixed(2)}`;
    document.getElementById('priceTimeMultiplier').textContent = `${(pricing.timeMultiplier || 1).toFixed(2)}√ó (${pricing.timeMultiplierName || 'Normal'})`;
