}

<!-- Progress Steps -->
<div class="mb-6 lg:mb-8 overflow-x-hidden">
    <div class="flex items-center justify-center space-x-2 lg:space-x-4">
        <div class="flex items-center" id="step1Indicator">
            <div class="w-8 h-8 lg:w-10 lg:h-10 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-sm lg:text-base">1</div>
            <span class="ml-2 font-medium text-gray-900 hidden lg:inline">Select Location</span>
        </div>
        <div class="w-8 lg:w-16 h-1 bg-gray-200 rounded" id="step1Line"></div>
        <div class="flex items-center" id="step2Indicator">
            <div class="w-8 h-8 lg:w-10 lg:h-10 bg-gray-200 text-gray-500 rounded-full flex items-center justify-center font-bold text-sm lg:text-base">2</div>
            <span class="ml-2 text-gray-500 hidden lg:inline">Choose Slot</span>
        </div>
        <div class="w-8 lg:w-16 h-1 bg-gray-200 rounded" id="step2Line"></div>
        <div class="flex items-center" id="step3Indicator">
            <div class="w-8 h-8 lg:w-10 lg:h-10 bg-gray-200 text-gray-500 rounded-full flex items-center justify-center font-bold text-sm lg:text-base">3</div>
            <span class="ml-2 text-gray-500 hidden lg:inline">Confirm & Pay</span>
        </div>
    </div>
</div>

<!-- Step 1: Select Location -->
<div id="locationStep">
    <div class="bg-white rounded-xl shadow-sm p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Select a Parking Location</h2>
        <div class="flex flex-col md:flex-row gap-4 mb-6">
            <div class="flex-1">
