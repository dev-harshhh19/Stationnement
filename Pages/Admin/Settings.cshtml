@page
@model Stationnement.Web.Pages.Admin.SettingsModel
@{
    ViewData["Title"] = "System Settings";
    Layout = "_AdminLayout";
}

<div class="max-w-4xl">
    <div class="mb-6">
        <h2 class="text-xl font-semibold text-gray-900">System Settings</h2>
        <p class="text-gray-500">Configure application settings</p>
    </div>

    <div class="space-y-6">
        <!-- General Settings -->
        <div class="bg-white rounded-xl shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">General Settings</h3>
            <div class="space-y-4">
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Site Name</label>
                        <input type="text" value="Stationnement" class="w-full px-4 py-2 border rounded-lg" disabled />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Support Email</label>
                        <input type="email" value="support@stationnement.com" class="w-full px-4 py-2 border rounded-lg" disabled />
                    </div>
                </div>
            </div>
        </div>

        <!-- Pricing Settings -->
        <div class="bg-white rounded-xl shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Default Pricing</h3>
            <div class="grid grid-cols-3 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Base Rate (â‚¹/hr)</label>
                    <input type="number" value="25" class="w-full px-4 py-2 border rounded-lg" disabled />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Premium Multiplier</label>
                    <input type="number" value="1.5" step="0.1" class="w-full px-4 py-2 border rounded-lg" disabled />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Weekend Surcharge</label>
                    <input type="number" value="10" class="w-full px-4 py-2 border rounded-lg" disabled />
                    <span class="text-xs text-gray-500">%</span>
                </div>
            </div>
        </div>

        <!-- Security Settings -->
        <div class="bg-white rounded-xl shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Security</h3>
            <div class="space-y-3">
                <label class="flex items-center">
                    <input type="checkbox" checked disabled class="mr-2" />
                    <span class="text-sm text-gray-700">Require email verification for new users</span>
                </label>
                <label class="flex items-center">
                    <input type="checkbox" checked disabled class="mr-2" />
                    <span class="text-sm text-gray-700">Single admin session only</span>
                </label>
                <label class="flex items-center">
                    <input type="checkbox" disabled class="mr-2" />
                    <span class="text-sm text-gray-700">Two-factor authentication (coming soon)</span>
                </label>
            </div>
        </div>

        <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4">
            <div class="flex items-center">
                <svg class="w-5 h-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <span class="text-yellow-700 font-medium">Settings editing is disabled in this version.</span>
            </div>
            <p class="text-sm text-yellow-600 mt-1">Settings are configured via environment variables. See deployment documentation.</p>
        </div>
    </div>
</div>
