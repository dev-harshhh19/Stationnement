@page
@model Stationnement.Web.Pages.Admin.LocationsModel
@{
    ViewData["Title"] = "Manage Locations";
    Layout = "_AdminLayout";
}

<div class="flex items-center justify-between mb-6">
    <div>
        <h2 class="text-xl font-semibold text-gray-900">Parking Locations</h2>
        <p class="text-gray-500">Manage parking locations and their settings</p>
    </div>
    <button onclick="showAddModal()" class="bg-primary-600 hover:bg-primary-700 text-white font-medium py-2 px-4 rounded-xl transition">
        + Add Location
    </button>
</div>

<div class="bg-white rounded-xl shadow-sm overflow-hidden">
    <table class="w-full">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Address</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Slots</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Base Price</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
            </tr>
        </thead>
        <tbody id="locationsTable" class="divide-y divide-gray-200">
            <tr><td colspan="6" class="px-6 py-8 text-center text-gray-500">Loading...</td></tr>
        </tbody>
    </table>
</div>

<!-- Add/Edit Modal -->
<div id="locationModal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl max-w-lg w-full p-6">
        <h3 class="text-xl font-semibold text-gray-900 mb-4" id="modalTitle">Add Location</h3>
        <div id="modalError" class="hidden mb-4 p-3 bg-red-100 text-red-700 rounded-lg"></div>
        <form id="locationForm" class="space-y-4">
            <input type="hidden" id="locationId" />
            <div><label class="block text-sm font-medium text-gray-700 mb-1">Name *</label><input type="text" id="locName" required class="w-full px-4 py-2 border rounded-lg" /></div>
            <div><label class="block text-sm font-medium text-gray-700 mb-1">Address *</label><input type="text" id="locAddress" required class="w-full px-4 py-2 border rounded-lg" /></div>
            <div class="grid grid-cols-2 gap-4">
                <div><label class="block text-sm font-medium text-gray-700 mb-1">City *</label><input type="text" id="locCity" required class="w-full px-4 py-2 border rounded-lg" /></div>
                <div><label class="block text-sm font-medium text-gray-700 mb-1">Total Slots</label><input type="number" id="locSlots" value="50" class="w-full px-4 py-2 border rounded-lg" /></div>
            </div>
            <div class="grid grid-cols-2 gap-4">
                <div><label class="block text-sm font-medium text-gray-700 mb-1">Base Price/Hour (₹)</label><input type="number" step="0.01" id="locPrice" value="25" class="w-full px-4 py-2 border rounded-lg" /></div>
                <div class="grid grid-cols-2 gap-2">
                    <div><label class="block text-sm font-medium text-gray-700 mb-1">Latitude</label><input type="number" step="any" id="locLat" value="0" class="w-full px-4 py-2 border rounded-lg" /></div>
                    <div><label class="block text-sm font-medium text-gray-700 mb-1">Longitude</label><input type="number" step="any" id="locLng" value="0" class="w-full px-4 py-2 border rounded-lg" /></div>
                </div>
            </div>
            <div class="flex gap-4 mt-6">
                <button type="button" onclick="closeModal()" class="flex-1 py-2 border rounded-lg hover:bg-gray-50">Cancel</button>
                <button type="submit" id="saveBtn" class="flex-1 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
const token = localStorage.getItem('adminAccessToken');
const headers = { 'Authorization': `Bearer ${token}`, 'Content-Type': 'application/json' };
let allLocations = [];

document.addEventListener('DOMContentLoaded', loadLocations);
document.getElementById('locationForm').addEventListener('submit', saveLocation);

async function loadLocations() {
    try {
        const response = await fetch('/api/admin/locations', { headers });
        const data = await response.json();
        if (data.success) {
            allLocations = data.data;
            renderLocations(data.data);
        }
    } catch (e) {
        console.error(e);
        document.getElementById('locationsTable').innerHTML = '<tr><td colspan="6" class="px-6 py-8 text-center text-red-500">Failed to load</td></tr>';
    }
}

function renderLocations(locations) {
    const tbody = document.getElementById('locationsTable');
    if (!locations || locations.length === 0) {
        tbody.innerHTML = '<tr><td colspan="6" class="px-6 py-8 text-center text-gray-500">No locations found. Click "Add Location" to create one.</td></tr>';
        return;
    }
    tbody.innerHTML = locations.map(l => `
        <tr>
            <td class="px-6 py-4 font-medium text-gray-900">${l.name}</td>
            <td class="px-6 py-4 text-gray-500">${l.address || ''}, ${l.city || ''}</td>
            <td class="px-6 py-4">${l.slot_count || l.total_slots || 0} slots</td>
            <td class="px-6 py-4">₹${(l.base_price_per_hour || 25).toFixed(2)}/hr</td>
            <td class="px-6 py-4"><span class="px-2 py-1 rounded-full text-xs font-medium ${l.is_active ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700'}">${l.is_active ? 'Active' : 'Inactive'}</span></td>
            <td class="px-6 py-4 space-x-2">
                <button onclick="editLocation('${l.id}')" class="text-primary-600 hover:text-primary-700">Edit</button>
                <button onclick="deleteLocation('${l.id}')" class="text-red-600 hover:text-red-700">Delete</button>
            </td>
        </tr>
    `).join('');
}

function showAddModal() {
    document.getElementById('locationId').value = '';
    document.getElementById('locName').value = '';
    document.getElementById('locAddress').value = '';
    document.getElementById('locCity').value = '';
    document.getElementById('locSlots').value = '50';
    document.getElementById('locPrice').value = '25';
    document.getElementById('locLat').value = '0';
    document.getElementById('locLng').value = '0';
    document.getElementById('modalTitle').textContent = 'Add Location';
    document.getElementById('modalError').classList.add('hidden');
    document.getElementById('locationModal').classList.remove('hidden');
}

function closeModal() { document.getElementById('locationModal').classList.add('hidden'); }

function editLocation(id) {
    const loc = allLocations.find(l => l.id === id);
    if (!loc) return showToast('Location not found', 'error');
    
    document.getElementById('locationId').value = id;
    document.getElementById('locName').value = loc.name || '';
    document.getElementById('locAddress').value = loc.address || '';
    document.getElementById('locCity').value = loc.city || '';
    document.getElementById('locSlots').value = loc.total_slots || 50;
    document.getElementById('locPrice').value = loc.base_price_per_hour || 25;
    document.getElementById('locLat').value = loc.latitude || 0;
    document.getElementById('locLng').value = loc.longitude || 0;
    document.getElementById('modalTitle').textContent = 'Edit Location';
    document.getElementById('modalError').classList.add('hidden');
    document.getElementById('locationModal').classList.remove('hidden');
}

async function saveLocation(e) {
    e.preventDefault();
    const btn = document.getElementById('saveBtn');
    const errorEl = document.getElementById('modalError');
    btn.disabled = true;
    btn.textContent = 'Saving...';
    
    const id = document.getElementById('locationId').value;
    const body = {
        name: document.getElementById('locName').value,
        address: document.getElementById('locAddress').value,
        city: document.getElementById('locCity').value,
        totalSlots: parseInt(document.getElementById('locSlots').value) || 50,
        basePricePerHour: parseFloat(document.getElementById('locPrice').value) || 25,
        latitude: parseFloat(document.getElementById('locLat').value) || 0,
        longitude: parseFloat(document.getElementById('locLng').value) || 0
    };
    
    try {
        const url = id ? `/api/admin/locations/${id}` : '/api/admin/locations';
        const method = id ? 'PUT' : 'POST';
        
        const response = await fetch(url, { method, headers, body: JSON.stringify(body) });
        const data = await response.json();
        
        if (data.success) {
            closeModal();
            loadLocations();
            showToast(data.message || 'Location saved!', 'success');
        } else {
            errorEl.textContent = data.message || 'Failed to save';
            errorEl.classList.remove('hidden');
        }
    } catch (error) {
        errorEl.textContent = 'Error saving location';
        errorEl.classList.remove('hidden');
    } finally {
        btn.disabled = false;
        btn.textContent = 'Save';
    }
}

async function deleteLocation(id) {
    if (!confirm('Are you sure you want to delete this location?')) return;
    try {
        const response = await fetch(`/api/admin/locations/${id}`, { method: 'DELETE', headers });
        const data = await response.json();
        if (data.success) {
            loadLocations();
            showToast('Location deleted', 'success');
        } else {
            showToast(data.message || 'Failed to delete', 'error');
        }
    } catch (e) {
        showToast('Error deleting location', 'error');
    }
}
</script>
}
