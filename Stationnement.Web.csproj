<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>Stationnement.Web</RootNamespace>
    <NoWarn>$(NoWarn);CS8602</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <!-- Exclude the DbMigrate subfolder as it's a separate project -->
    <Compile Remove="DbMigrate\**" />
    <Content Remove="DbMigrate\**" />
    <EmbeddedResource Remove="DbMigrate\**" />
    <None Remove="DbMigrate\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Npgsql" Version="8.0.5" />
    <PackageReference Include="Dapper" Version="2.1.35" />
    <PackageReference Include="BCrypt.Net-Next" Version="4.0.3" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.11" />
    <PackageReference Include="QRCoder" Version="1.7.0" />
    <PackageReference Include="System.IdentityModel.Tokens.Jwt" Version="8.0.2" />
  </ItemGroup>

</Project>
